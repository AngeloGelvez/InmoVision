--DDL

--NOMBRE BASE DE DATOS inmovision_db

CREATE TABLE admin(
	admin_id INT AUTO_INCREMENT,
    nombre VARCHAR(80) NOT NULL,
    correo VARCHAR(70) NOT NULL,
    contrasena VARCHAR(50) NOT NULL,
    CONSTRAINT pk_admin PRIMARY KEY(admin_id)
);

CREATE TABLE cliente(
	cliente_id INT AUTO_INCREMENT,
    nombre VARCHAR(50) NOT NULL,
    apellido VARCHAR(50) NOT NULL,
    correo VARCHAR(70) NOT NULL,
    contrasena VARCHAR(50) NOT NULL,
    estado_civil VARCHAR(30) NOT NULL,
    telefono VARCHAR(10) NOT NULL,
    cedula VARCHAR(10) NOT NULL UNIQUE,
    CONSTRAINT pk_cliente PRIMARY KEY(cliente_id)
);

CREATE TABLE fiador(
	fiador_id INT AUTO_INCREMENT,
    nombre VARCHAR(50) NOT NULL,
    apellido VARCHAR(50) NOT NULL,
    correo VARCHAR(70) NOT NULL,
    telefono VARCHAR(10) NOT NULL,
    cedula VARCHAR(10) NOT NULL UNIQUE,
    CONSTRAINT pk_fiador PRIMARY KEY(fiador_id)
);

CREATE TABLE inmueble(
	inmueble_id INT AUTO_INCREMENT,
    titulo VARCHAR(30) NOT NULL,
    direccion VARCHAR(100) NOT NULL,
    imagen TEXT NOT NULL,
    tipo VARCHAR(30) NOT NULL,
    area NUMERIC(4,0) NOT NULL,
    precio NUMERIC(18,2) NOT NULL,
    habitaciones INT NOT NULL,
    banos INT NOT NULL,
    CONSTRAINT pk_inmueble PRIMARY KEY(inmueble_id),
    cliente_fk INT,
    CONSTRAINT fk_cliente_i FOREIGN KEY(cliente_fk) REFERENCES cliente(cliente_id),
    fiador_fk INT,
    CONSTRAINT fk_fiador_i FOREIGN KEY(fiador_fk) REFERENCES fiador(fiador_id)
);

